<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UIAlertController"/>

    <style name="UIAlertController.TitleText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>

    <style name="UIAlertController.MessageText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="layout_goneMarginTop">30dp</item>
    </style>

    <style name="UIAlertController.DividerHorizontal">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#cdced2</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="UIAlertController.DividerVertical">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">#cdced2</item>
    </style>

    <style name="UIAlertController.ActionView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>